# Environment Configuration for MCP Chat Backend

# Development (default)
NODE_ENV=development
PORT=3001

# CORS Configuration
# Comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://myapp.com,https://staging.myapp.com
ALLOWED_ORIGINS=

# Frontend URL (useful for Docker compositions)
# Example: FRONTEND_URL=http://frontend:3000
FRONTEND_URL=

# Database Configuration
DB_PATH=./database/mcpchat.db

# JWT Configuration
JWT_SECRET=dev_secret_change_in_production
JWT_EXPIRES_IN=12h

# Logging
LOG_LEVEL=info

# AI Service Configuration
OLLAMA_URL=http://localhost:11434
OPENAI_API_KEY=
